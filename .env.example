# Environment
NODE_ENV=development
PORT=3000
HOST=localhost
LOG_LEVEL=info
LOG_PRETTY=true
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Health Check
HEALTH_CHECK_INTERVAL=30000`

# Database (override DATABASE_URL or use individual fields below)
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fastify_app
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# Redis (optional)
ENABLE_REDIS=true
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_DB=0

# JWT  openssl rand --base64 32 (generate a secure secret)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# API
API_VERSION=v1
API_PREFIX=/api


# JWT  openssl rand --base64 32 (generate a secure secret)
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3000 #Base URL of your app
